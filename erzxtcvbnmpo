#include <iostream>

int findMaxSumAdjacentPair(int arr[], int size);

int main(){

    int arraySize = 10;

    int arr[arraySize] = {3, 3, 2, 1, 5, 5, 3, 2, 4, 4};

    int maxSum = findMaxSumAdjacentPair(arr, 10);

    std::cout << "Max Sum = " << maxSum << std::endl;
}

int findMaxSumAdjacentPair(int arr[], int size) {
    int highest = 0;
    for(int i = 0; i < arraySize - 1; i++){
        if (highest <= (arr[i] + arr[i + 1])) { highest = arr[i] + arr[i + 1] }
            }
        return highest;
};
