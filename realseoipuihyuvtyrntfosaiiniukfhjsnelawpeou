#include <iostream>
using namespace std;

int main(){
  int age;
  int ageTotal;
  int numPeople = 0;
  cout << "enter the 1st person's age (type in a negative number to stop): " << endl;
  cin >> age;
  while (age > 0) {
    ageTotal = ageTotal + age;
    numPeople++;
    cout << "Enter next person's age (or a negative number to quit): " << endl;
    cin >> age;
  }
  cout << "Number of people entered: " << numPeople << endl;
  cout << "Average age: " << ageTotal/numPeople << endl;
  return 0;
}
