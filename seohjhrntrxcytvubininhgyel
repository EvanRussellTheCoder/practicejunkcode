#include <iostream>
using namespace std;

int main(){
int i = 1;
int j = 1;
int age;
int total = 0;
int numPeople;
double average = 0;
cout << "Enter number of people (type a negative number to quit): " << endl;
cin >> numPeople;
cout << "Enter their ages: " << endl;
while (i < numPeople){
  cin >> age;
  total = total + age;
  i++;
}
average = total/numPeople;
  return 0;
}
